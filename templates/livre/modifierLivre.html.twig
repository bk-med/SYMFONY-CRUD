{% extends 'base.html.twig' %}

{% block title %}Modification d'un livre{% endblock %}

{% block body %}

<h2>Modification d'un livre</h2>
<a href="{{ url('app_livres') }}"><button type="button" class="btn rounded-pill btn-success">Retour</button></a>
<div class="form-horizontal">
    {{ form_start(form) }}
        <div class="form-group">
            <label class="control-label col-sm-2" for="nomLivre">Nom du livre :</label>
            <div class="col-sm-10">
                {{ form_widget(form.nomLivre, {'attr': {'class': 'form-control', 'placeholder': 'Le nom du livre'}}) }}
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="auteurLivre">Auteur du livre :</label>
            <div class="col-sm-10">
                {{ form_widget(form.auteurLivre, {'attr': {'class': 'form-control', 'placeholder': 'Auteur du livre'}}) }}
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="reference">Référence :</label>
            <div class="col-sm-10">
                {{ form_widget(form.reference, {'attr': {'class': 'form-control', 'placeholder': 'La référence'}}) }}
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="ouvrage">Ouvrage :</label>
            <div class="col-sm-10">
                {{ form_widget(form.ouvrage, {'attr': {'class': 'form-control', 'placeholder': 'Ouvrage'}}) }}
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="anneePublication">Année de publication :</label>
            <div class="col-sm-10">
                {{ form_widget(form.anneePublication, {'attr': {'class': 'form-control', 'type': 'date'}}) }}
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="image">Image :</label>
            <div class="col-sm-10">
                {{ form_widget(form.image, {'attr': {'class': 'form-control', 'placeholder': 'Upload de l\'image'}}) }}
            </div>
        </div>
        <div class="form-group button">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" name="modifier" class="btn btn-warning">Modifier</button>
            </div>
        </div>
    {{ form_end(form) }}
</div>

{% endblock %}
