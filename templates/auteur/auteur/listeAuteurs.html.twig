{% extends 'base.html.twig' %}

{% block title %}Liste des auteurs{% endblock %}

{% block body %}
    <h1>Liste des auteurs</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Email</th>
                <th scope="col">Téléphone</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for auteur in auteurs %}
                <tr>
                    <td>{{ auteur.nom }}</td>
                    <td>{{ auteur.email }}</td>
                    <td>{{ auteur.telephone }}</td>
                    <td>
                        <a href="{{ path('app_modifier_auteur', {'id': auteur.id}) }}" class="btn btn-primary">Modifier</a>
                        <a href="{{ path('app_supprimer_auteur', {'id': auteur.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet auteur ?')">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun auteur trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_ajouter_auteur') }}" class="btn btn-success">Ajouter un auteur</a>
{% endblock %}
