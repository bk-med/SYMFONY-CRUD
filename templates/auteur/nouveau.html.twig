{# templates/auteur/new.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel auteur{% endblock %}

{% block body %}
    <h1>Créer un nouvel auteur</h1>

    {{ form_start(form) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.email) }}
        {{ form_row(form.livre) }}
        {{ form_row(form.image) }} {# Affichage du champ d'image #}

        <button type="submit" class="btn btn-primary">Enregistrer</button>
    {{ form_end(form) }}
{% endblock %}
