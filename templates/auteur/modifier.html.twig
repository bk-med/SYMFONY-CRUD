{# templates/auteur/modifier.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier l'Auteur{{ endblock %}}

{% block body %}
    <h1>Modifier l'Auteur</h1>
    {{ form_start(form) }}
    {{ form_row(form.nom) }}
    {{ form_row(form.email) }}
    {{ form_row(form.image) }}
    <button type="submit">Enregistrer</button>
    {{ form_end(form) }}
{% endblock %}
